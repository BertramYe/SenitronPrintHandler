<UserControl x:Class="SenitronPrintHandler.RadioButtonDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SenitronPrintHandler"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="600">
    <StackPanel Background="White">
        <TextBlock Text="{Binding Message}" Margin="10" />
        <StackPanel Name="radioButtonContainer" Background="White">
        </StackPanel>
        <Button x:Name="OkButton" Content="OK" Click="OkButton_Click" Margin="10,60,10,10" Width="200" Height="20" />
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="10" Width="200" Height="20"/>
    </StackPanel>
</UserControl>
