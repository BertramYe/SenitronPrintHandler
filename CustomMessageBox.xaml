<UserControl x:Class="SenitronPrintHandler.CustomMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SenitronPrintHandler"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <!-- 自定义对话框内容 -->
        <StackPanel>
            <TextBlock Text="{Binding Message}" Margin="10" />
            <Button Content="OK" Click="OkButton_Click" Margin="10" />
            <Button Content="Cancel" Click="CancelButton_Click" Margin="10" />
        </StackPanel>


    </Grid>
</UserControl>
